<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <!-- Constant Configuration -->
    <constant name="struts.devMode" value="true" />
    <constant name="struts.action.extension" value="action,," />
    <constant name="struts.enable.SlashesInActionNames" value="true" />
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false" />
    <constant name="struts.patternMatcher" value="regex" />
    
    <!-- Package Configuration -->
    <package name="default" namespace="/api/recycling" extends="json-default">
        
        <!-- Health Check Action -->
        <action name="health" class="recyclingAction" method="health">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>

        <!-- Parse Record Action -->
        <action name="parse" class="recyclingAction" method="parseRecord">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>

        <!-- Correct Record Action -->
        <action name="correct" class="recyclingAction" method="correctRecord">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>

        <!-- Batch Process Action -->
        <action name="batch" class="recyclingAction" method="processBatch">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>

        <!-- Error Types Action -->
        <action name="errorTypes" class="recyclingAction" method="getErrorTypes">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>

    </package>
</struts>

